@page "/suppliers"
@layout DashboardLayout
@using PharmacyManagementSystem.Services
<PageTitle>Suppliers & Purchase - PharmERP</PageTitle>

<div class="h-full bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 p-6">
    <div class="flex items-center justify-between mb-6">
        <div>
            <h1 class="text-3xl font-bold text-white">Suppliers & Purchase Management</h1>
            <p class="mt-1 text-sm text-slate-400">Manage suppliers and purchase orders</p>
        </div>

        @if (activeTab == 0) // SUPPLIERS TAB BUTTON
        {
            <button @onclick="OpenAddModal"
                    class="px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-all duration-200 flex items-center space-x-2 shadow-lg shadow-blue-500/20">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                </svg>
                <span>Add Supplier</span>
            </button>
        }
        else // PURCHASE ORDERS TAB BUTTON
        {
            <button @onclick="OpenCreateOrderModal"
                    class="px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-all duration-200 flex items-center space-x-2 shadow-lg shadow-blue-500/20">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                </svg>
                <span>Create Purchase Order</span>
            </button>
        }
    </div>

    <div class="bg-slate-800/50 backdrop-blur-sm rounded-xl border border-slate-700/50 overflow-hidden">
        <div class="border-b border-slate-700/50">
            <nav class="flex -mb-px">
                <button @onclick="() => activeTab = 0"
                        class="@(activeTab == 0 ? "border-blue-500 text-blue-400" : "border-transparent text-slate-400 hover:text-slate-300 hover:border-slate-600") flex-1 py-4 px-6 text-center border-b-2 font-medium text-sm transition-colors">
                    <div class="flex items-center justify-center space-x-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                        </svg>
                        <span>Suppliers</span>
                    </div>
                </button>
                <button @onclick="() => activeTab = 1"
                        class="@(activeTab == 1 ? "border-blue-500 text-blue-400" : "border-transparent text-slate-400 hover:text-slate-300 hover:border-slate-600") flex-1 py-4 px-6 text-center border-b-2 font-medium text-sm transition-colors">
                    <div class="flex items-center justify-center space-x-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                        </svg>
                        <span>Purchase Orders</span>
                    </div>
                </button>
            </nav>
        </div>

        @if (activeTab == 0)
        {
            <div class="p-6">
                @if (isLoading)
                {
                    <div class="text-center py-20 text-blue-400">Loading Suppliers...</div>
                }
                else
                {
                    <div class="flex items-center mb-6">
                        <div class="flex-1 relative">
                            <input type="text" @bind="SearchTerm" @bind:event="oninput"
                                   placeholder="     Search suppliers by name, contact, or location..."
                                   class="w-full px-4 py-2.5 pl-10 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-blue-500">

                            <svg class="absolute left-3 top-3 w-5 h-5 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                            </svg>
                        </div>
                    </div>


                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-slate-700">
                            <thead class="bg-slate-700/50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Name</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Contact</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Email</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Phone</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Location</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="bg-slate-800/30 divide-y divide-slate-700">
                                @foreach (var s in FilteredSuppliers)
                                {
                                    <tr class="hover:bg-slate-700/50 transition-colors">
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-white">@s.Name</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-300">@s.ContactPerson</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-300">@s.Email</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-300">@s.Phone</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-300">@s.City, @s.Country</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                            <button @onclick="() => OpenEditModal(s)" class="text-blue-400 hover:text-blue-300 mr-3">Edit</button>
                                            <button @onclick="() => DeleteSupplier(s)" class="text-red-400 hover:text-red-300">Archive</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (!SupplierList.Any())
                    {
                        <div class="text-center py-20 text-slate-500">
                            <svg class="w-20 h-20 mx-auto mb-6 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                            </svg>
                            <h3 class="text-xl font-medium mb-2">No suppliers yet</h3>
                            <p class="text-sm">Click "Add Supplier" to start managing your suppliers</p>
                        </div>
                    }
                }
            </div>
        }

        @if (activeTab == 1)
        {
            <div class="p-6">
                @if (isLoadingOrders)
                {
                    <div class="text-center py-20 text-blue-400">Loading Purchase Orders...</div>
                }
                else if (!OrderList.Any())
                {
                    <div class="p-20 text-center text-slate-500">
                        <svg class="w-20 h-20 mx-auto mb-6 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                        </svg>
                        <h3 class="text-xl font-medium mb-2">No Purchase Orders Found</h3>
                        <p class="text-sm">Create a new order to see data here.</p>
                    </div>
                }
                else
                {
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-slate-700">
                            <thead class="bg-slate-700/50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Order ID</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Supplier</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Order Date</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Expected Date</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Total</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Status</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="bg-slate-800/30 divide-y divide-slate-700">
                                @foreach (var order in OrderList)
                                {
                                    <tr class="hover:bg-slate-700/50 transition-colors">
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-white">@order.PurchaseOrderId</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-300">@order.SupplierName</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-300">@order.OrderDateFormatted</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-300">@(order.ExpectedDate?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-emerald-400">$@order.TotalAmount</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-300">@order.Status</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                            @if (order.Status == "Pending")
                                            {
                                                <button @onclick="() => MarkOrderReceived(order.PurchaseOrderId)" 
                                                        class="text-emerald-400 hover:text-emerald-300 font-medium text-xs border border-emerald-500/30 px-3 py-1 rounded hover:bg-emerald-500/10 transition-colors">
                                                    Mark Received
                                                </button>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        }
    </div>
</div>

@* ADD / EDIT SUPPLIER MODAL (Used when activeTab == 0) *@
@if (showAddModal)
{
    <div class="fixed inset-0 bg-black/70 flex items-center justify-center z-50 p-4">
        <div class="bg-slate-800 rounded-2xl shadow-2xl w-full max-w-4xl border border-slate-700">
            @* Header *@
            <div class="flex items-center justify-between p-6 border-b border-slate-700">
                <div>
                    <h2 class="text-2xl font-bold text-white">
                        @(editingSupplier is null ? "Add New Supplier" : "Edit Supplier")
                    </h2>
                    <p class="text-slate-400 text-sm mt-1">Enter supplier information</p>
                </div>
                <button @onclick="() => showAddModal = false" class="text-slate-400 hover:text-white">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            @* Form *@
            <div class="p-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="space-y-5">
                        <div>
                            <label class="block text-sm font-medium text-slate-300 mb-2">Supplier Name</label>
                            <input @bind="currentSupplier.Name"
                                   placeholder="e.g. MediSupply Co."
                                   class="w-full px-4 py-3 bg-slate-700/70 border border-slate-600 rounded-xl text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-300 mb-2">Contact Person</label>
                            <input @bind="currentSupplier.ContactPerson"
                                   placeholder="e.g. John Smith"
                                   class="w-full px-4 py-3 bg-slate-700/70 border border-slate-600 rounded-xl text-white placeholder-slate-500" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-300 mb-2">Email</label>
                            <input @bind="currentSupplier.Email" type="email"
                                   placeholder="contact@supplier.com"
                                   class="w-full px-4 py-3 bg-slate-700/70 border border-slate-600 rounded-xl text-white placeholder-slate-500" />
                        </div>
                    </div>
                    <div class="space-y-5">
                        <div>
                            <label class="block text-sm font-medium text-slate-300 mb-2">Address</label>
                            <input @bind="currentSupplier.Address"
                                   placeholder="Street address"
                                   class="w-full px-4 py-3 bg-slate-700/70 border border-slate-600 rounded-xl text-white placeholder-slate-500" />
                        </div>
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-slate-300 mb-2">City</label>
                                <input @bind="currentSupplier.City"
                                       placeholder="City"
                                       class="w-full px-4 py-3 bg-slate-700/70 border border-slate-600 rounded-xl text-white placeholder-slate-500" />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-slate-300 mb-2">Country</label>
                                <input @bind="currentSupplier.Country"
                                       placeholder="Country"
                                       class="w-full px-4 py-3 bg-slate-700/70 border border-slate-600 rounded-xl text-white placeholder-slate-500" />
                            </div>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-300 mb-2">Phone</label>
                            <input @bind="currentSupplier.Phone"
                                   placeholder="+1-555-0000"
                                   class="w-full px-4 py-3 bg-slate-700/70 border border-slate-600 rounded-xl text-white placeholder-slate-500" />
                        </div>
                    </div>
                </div>
            </div>
            @* Footer *@
            <div class="flex justify-end space-x-4 px-6 pb-6">
                <button @onclick="() => showAddModal = false"
                        class="px-6 py-3 bg-slate-700 hover:bg-slate-600 text-white rounded-xl transition-colors font-medium">
                    Cancel
                </button>
                <button @onclick="SaveSupplier"
                        class="px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-xl transition-colors font-medium shadow-lg">
                    @(editingSupplier is null ? "Add Supplier" : "Update Supplier")
                </button>
            </div>
        </div>
    </div>
}

@* NEW PURCHASE ORDER MODAL (Styled to match the Supplier modal) *@
@if (showCreateOrderModal)
{
    <div class="fixed inset-0 bg-black/70 flex items-center justify-center z-50 p-4">
        <div class="bg-slate-800 rounded-2xl shadow-2xl w-full max-w-lg border border-slate-700">
            @* Header *@
            <div class="flex items-center justify-between p-6 border-b border-slate-700">
                <div>
                    <h2 class="text-2xl font-bold text-white">Create Purchase Order</h2>
                    <p class="text-slate-400 text-sm mt-1">Create a new purchase order from supplier</p>
                </div>
                <button @onclick="() => showCreateOrderModal = false" class="text-slate-400 hover:text-white">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            @* Form *@
            <div class="p-6 space-y-5">
                <div>
                    <label class="block text-sm font-medium text-slate-300 mb-2">Supplier</label>
                    <select @onchange="OnSupplierChanged"
                            class="w-full px-4 py-3 bg-slate-700/70 border border-slate-600 rounded-xl text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="0">Select supplier</option>
                        @foreach (var s in SupplierList)
                        {
                            <option value="@s.SupplierId">@s.Name</option>
                        }
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-300 mb-2">Expected Delivery Date</label>
                    <input type="date" @bind="orderExpectedDate"
                           placeholder="dd/mm/yyyy"
                           class="w-full px-4 py-3 bg-slate-700/70 border border-slate-600 rounded-xl text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-300 mb-2">Medicine Name</label>
                    <select @bind="selectedMedicineId"
                            class="w-full px-4 py-3 bg-slate-700/70 border border-slate-600 rounded-xl text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-blue-500"
                            disabled="@(selectedSupplierId == 0 ? true : false)">
                        <option value="0">@(selectedSupplierId == 0 ? "Select supplier first" : "Select medicine")</option>
                        @foreach (var m in FilteredMedicinesBySupplier)
                        {
                            <option value="@m.MedicineId">@m.Name</option>
                        }
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-300 mb-2">Quantity</label>
                    <input type="number" @bind="orderQuantity"
                           placeholder="Enter quantity"
                           class="w-full px-4 py-3 bg-slate-700/70 border border-slate-600 rounded-xl text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-300 mb-2">Notes</label>
                    <textarea rows="3" @bind="orderNotes"
                          placeholder="Additional notes or instructions..."
                          class="w-full px-4 py-3 bg-slate-700/70 border border-slate-600 rounded-xl text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
                </div>
            </div>
            @* Footer *@
            <div class="flex justify-end space-x-4 px-6 pb-6">
                <button @onclick="() => showCreateOrderModal = false"
                        class="px-6 py-3 bg-slate-700 hover:bg-slate-600 text-white rounded-xl transition-colors font-medium">
                    Cancel
                </button>
                <button @onclick="SavePurchaseOrder"
                        class="px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-xl transition-colors font-medium shadow-lg">
                    Create Order
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Inject]
    public ISupplierService SupplierService { get; set; } = default!;
    [Inject]
    public IJSRuntime JS { get; set; } = default!;
    [Inject]
    public IPurchaseOrderService PurchaseOrderService { get; set; } = default!;
    [Inject]
    public IInventoryService InventoryService { get; set; } = default!;

    private List<PharmacyManagementSystem.Services.Supplier> SupplierList = new();
    private List<PharmacyManagementSystem.Services.PurchaseOrders> OrderList = new();
    private List<PharmacyManagementSystem.Services.InventoryItem> AllMedicines = new();

    private bool isLoading = true;
    private bool isLoadingOrders = true;

    private int activeTab = 0;
    private string SearchTerm = "";
    private bool showAddModal = false;
    private bool showCreateOrderModal = false; 

    // Purchase Order Modal Variables
    private int selectedSupplierId = 0;
    private int selectedMedicineId = 0;
    private DateTime? orderExpectedDate;
    private int orderQuantity;
    private string orderNotes = "";

    private PharmacyManagementSystem.Services.Supplier currentSupplier = new();
    private PharmacyManagementSystem.Services.Supplier? editingSupplier = null;

    private IEnumerable<PharmacyManagementSystem.Services.Supplier> FilteredSuppliers =>
        string.IsNullOrWhiteSpace(SearchTerm)
            ? SupplierList
            : SupplierList.Where(s =>
                s.Name.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ||
                s.ContactPerson.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ||
                s.Email.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ||
                s.City.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase));

    // Filter medicines by selected supplier's manufacturer name
    private IEnumerable<PharmacyManagementSystem.Services.InventoryItem> FilteredMedicinesBySupplier
    {
        get
        {
            if (selectedSupplierId == 0) 
            {
                Console.WriteLine("No supplier selected, returning empty list");
                return new List<PharmacyManagementSystem.Services.InventoryItem>();
            }

            var selectedSupplier = SupplierList.FirstOrDefault(s => s.SupplierId == selectedSupplierId);
            if (selectedSupplier == null) 
            {
                Console.WriteLine($"Supplier with ID {selectedSupplierId} not found");
                return new List<PharmacyManagementSystem.Services.InventoryItem>();
            }

            Console.WriteLine($"Selected Supplier: {selectedSupplier.Name}");
            Console.WriteLine($"Total medicines in inventory: {AllMedicines.Count}");

            // Filter medicines where Manufacturer matches Supplier Name
            var filtered = AllMedicines.Where(m => 
                m.Manufacturer != null && 
                m.Manufacturer.Equals(selectedSupplier.Name, StringComparison.OrdinalIgnoreCase))
                .ToList();

            Console.WriteLine($"Filtered medicines for manufacturer '{selectedSupplier.Name}': {filtered.Count}");
            
            foreach (var med in filtered)
            {
                Console.WriteLine($"  - {med.Name} (Manufacturer: {med.Manufacturer})");
            }

            return filtered;
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadSuppliers();
        await LoadOrders();
        await LoadMedicines();
    }

    private async Task LoadSuppliers()
    {
        isLoading = true;
        try
        {
            SupplierList = await SupplierService.GetAllSuppliersAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading suppliers: {ex.Message}");
            await JS.InvokeVoidAsync("alert", $"Error loading suppliers: {ex.Message}");
            SupplierList = new List<PharmacyManagementSystem.Services.Supplier>();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task LoadOrders()
    {
        isLoadingOrders = true;
        try
        {
            OrderList = await PurchaseOrderService.GetAllOrdersAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading orders: {ex.Message}");
            await JS.InvokeVoidAsync("alert", $"Error loading purchase orders: {ex.Message}");
            OrderList = new List<PharmacyManagementSystem.Services.PurchaseOrders>();
        }
        finally
        {
            isLoadingOrders = false;
            StateHasChanged();
        }
    }

    private async Task LoadMedicines()
    {
        try
        {
            AllMedicines = await InventoryService.GetAllInventoryAsync();
            Console.WriteLine($"Loaded {AllMedicines.Count} medicines from inventory");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading medicines: {ex.Message}");
            AllMedicines = new List<PharmacyManagementSystem.Services.InventoryItem>();
        }
    }

    // Opens the Supplier Add/Edit Modal
    private void OpenAddModal()
    {
        editingSupplier = null;
        currentSupplier = new PharmacyManagementSystem.Services.Supplier();
        showAddModal = true;
    }

    // NEW METHOD: Opens the Create Purchase Order Modal
    private void OpenCreateOrderModal()
    {
        showAddModal = false; 
        showCreateOrderModal = true;
        selectedSupplierId = 0;
        selectedMedicineId = 0;
        orderQuantity = 0;
        orderExpectedDate = null;
        orderNotes = "";
    }

    // Handle supplier selection change
    private void OnSupplierChanged(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int supplierId))
        {
            selectedSupplierId = supplierId;
            selectedMedicineId = 0; // Reset medicine selection
            StateHasChanged(); // Force UI update
        }
    }

    private async Task SavePurchaseOrder()
    {
        if (selectedSupplierId == 0)
        {
            await JS.InvokeVoidAsync("alert", "Please select a supplier.");
            return;
        }
        if (selectedMedicineId == 0)
        {
             await JS.InvokeVoidAsync("alert", "Please select a medicine.");
             return;
        }
        if (orderQuantity <= 0)
        {
             await JS.InvokeVoidAsync("alert", "Please enter a valid quantity.");
             return;
        }

        try 
        {
            var newOrder = new PharmacyManagementSystem.Services.PurchaseOrders
            {
                SupplierId = selectedSupplierId,
                ExpectedDate = orderExpectedDate,
                Items = new List<PharmacyManagementSystem.Services.PurchaseOrderItem>
                {
                    new PharmacyManagementSystem.Services.PurchaseOrderItem
                    {
                        MedicineId = selectedMedicineId,
                        QuantityOrdered = orderQuantity
                    }
                }
            };
            
            await PurchaseOrderService.CreateOrderAsync(newOrder);
            
            await JS.InvokeVoidAsync("alert", "Purchase Order created successfully!");
            showCreateOrderModal = false;
            
            await LoadOrders();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error creating order: {ex.Message}");
            await JS.InvokeVoidAsync("alert", $"Failed to create order: {ex.Message}");
        }
    }

    private void OpenEditModal(PharmacyManagementSystem.Services.Supplier supplier)
    {
        editingSupplier = supplier;
        currentSupplier = new PharmacyManagementSystem.Services.Supplier
        {
            SupplierId = supplier.SupplierId,
            Name = supplier.Name,
            ContactPerson = supplier.ContactPerson,
            Email = supplier.Email,
            Phone = supplier.Phone,
            Address = supplier.Address,
            City = supplier.City,
            Country = supplier.Country
        };
        showAddModal = true;
    }

    private async Task SaveSupplier()
    {
        if (string.IsNullOrWhiteSpace(currentSupplier.Name))
        {
            await JS.InvokeVoidAsync("alert", "Supplier name is required!");
            return;
        }

        try
        {
            if (editingSupplier is null)
            {
                await SupplierService.AddSupplierAsync(currentSupplier);
                await JS.InvokeVoidAsync("alert", $"Supplier '{currentSupplier.Name}' added successfully!");
            }
            else
            {
                await SupplierService.UpdateSupplierAsync(currentSupplier);
                await JS.InvokeVoidAsync("alert", $"Supplier '{currentSupplier.Name}' updated successfully!");
            }

            showAddModal = false;
            await LoadSuppliers();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving supplier: {ex.Message}");
            await JS.InvokeVoidAsync("alert", $"Error saving supplier: {ex.Message}");
        }
    }

    private async Task DeleteSupplier(PharmacyManagementSystem.Services.Supplier supplier)
    {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", $"Are you sure you want to delete supplier '{supplier.Name}'?");

        if (!confirmed) return;

        try
        {
            await SupplierService.DeleteSupplierAsync(supplier.SupplierId);
            await JS.InvokeVoidAsync("alert", $"Supplier '{supplier.Name}' deleted successfully.");
            await LoadSuppliers();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting supplier: {ex.Message}");
            await JS.InvokeVoidAsync("alert", $"Error deleting supplier: {ex.Message}");
        }
    }
