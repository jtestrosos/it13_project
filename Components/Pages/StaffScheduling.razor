@page "/staff"
@layout DashboardLayout
@using PharmacyManagementSystem.Services

<PageTitle>Staff Scheduling - PharmERP</PageTitle>

<div class="h-full flex flex-col bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 p-6">
    <div class="flex items-center justify-between mb-6">
        <div>
            <h1 class="text-3xl font-bold text-white">Staff Scheduling</h1>
            <p class="mt-1 text-sm text-slate-400">Manage staff members and their schedules</p>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
        <div class="bg-slate-800/50 backdrop-blur-sm rounded-xl border border-slate-700/50 p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-slate-400 mb-1">Total Staff</p>
                    <h3 class="text-3xl font-bold text-white">@staffMembers.Count</h3>
                </div>
                <div class="w-12 h-12 bg-blue-500/20 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                </div>
            </div>
        </div>
        <div class="bg-slate-800/50 backdrop-blur-sm rounded-xl border border-slate-700/50 p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-slate-400 mb-1">Today's Shifts</p>
                    <h3 class="text-3xl font-bold text-white">@shifts.Count(s => s.Date.Date == DateTime.Today)</h3>
                </div>
                <div class="w-12 h-12 bg-emerald-500/20 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
            </div>
        </div>
        <div class="bg-slate-800/50 backdrop-blur-sm rounded-xl border border-slate-700/50 p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-slate-400 mb-1">This Week</p>
                    <h3 class="text-3xl font-bold text-white">@shifts.Count</h3>
                </div>
                <div class="w-12 h-12 bg-amber-500/20 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                </div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 flex-1">
        <div class="bg-slate-800/50 backdrop-blur-sm rounded-xl border border-slate-700/50 flex flex-col">
            <div class="p-6 border-b border-slate-700/50 flex items-center justify-between">
                <h2 class="text-lg font-semibold text-white">Staff Members</h2>
                <button @onclick="OpenAddStaffModal"
                        class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium flex items-center space-x-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                    </svg>
                    <span>Add Staff</span>
                </button>
            </div>

            @if (isLoading)
            {
                <div class="flex-1 flex items-center justify-center text-center text-blue-400 p-10">Loading Staff Data...</div>
            }
            else if (!staffMembers.Any())
            {
                <div class="flex-1 flex items-center justify-center text-center text-slate-500 p-10">
                    <div>
                        <svg class="w-20 h-20 mx-auto mb-4 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                        <p class="text-lg">No staff members yet</p>
                        <p class="text-sm mt-2">Click "Add Staff" to get started</p>
                    </div>
                </div>
            }
            else
            {
                <div class="overflow-y-auto">
                    <table class="min-w-full divide-y divide-slate-700">
                        <thead class="bg-slate-700/50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Name</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Role</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Email</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Status</th>
                            </tr>
                        </thead>
                        <tbody class="bg-slate-800/30 divide-y divide-slate-700">
                            @foreach (var member in staffMembers.OrderBy(s => s.Name))
                            {
                                <tr class="hover:bg-slate-700/50 transition-colors">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-white">@member.Name</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-300">@member.Role</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-300">@member.Email</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm">
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @(member.Status == "active" ? "bg-emerald-100 text-emerald-800" : "bg-red-100 text-red-800")">
                                            @member.Status
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>

        <div class="bg-slate-800/50 backdrop-blur-sm rounded-xl border border-slate-700/50 flex flex-col">
            <div class="p-6 border-b border-slate-700/50 flex items-center justify-between">
                <h2 class="text-lg font-semibold text-white">Weekly Schedule</h2>
                <button @onclick="OpenAddShiftModal"
                        class="px-4 py-2 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg font-medium flex items-center space-x-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                    </svg>
                    <span>Add Shift</span>
                </button>
            </div>

            @if (isLoading)
            {
                <div class="flex-1 flex items-center justify-center text-center text-blue-400 p-10">Loading Shifts...</div>
            }
            else if (!shifts.Any())
            {
                <div class="flex-1 flex items-center justify-center text-center text-slate-500 p-10">
                    <div>
                        <svg class="w-20 h-20 mx-auto mb-4 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        <p class="text-lg">No shifts scheduled</p>
                    </div>
                </div>
            }
            else
            {
                <div class="overflow-y-auto">
                    <table class="min-w-full divide-y divide-slate-700">
                        <thead class="bg-slate-700/50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Date</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Staff</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Role</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Time</th>
                            </tr>
                        </thead>
                        <tbody class="bg-slate-800/30 divide-y divide-slate-700">
                            @foreach (var shift in shifts.OrderByDescending(s => s.Date).ThenBy(s => s.StartTime))
                            {
                                <tr class="hover:bg-slate-700/50 transition-colors">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-white">@shift.Date.ToShortDateString()</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-300">@shift.StaffName</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-300">@shift.Role</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-300">@shift.StartTime.ToString(@"hh\:mm") - @shift.EndTime.ToString(@"hh\:mm")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@if (showAddStaffModal)
{
    <div class="fixed inset-0 bg-black/80 flex items-center justify-center z-50 p-4">
        <div class="bg-slate-800/90 backdrop-blur-xl rounded-2xl border border-slate-700 shadow-2xl w-full max-w-md">
            <div class="flex items-center justify-between p-6 border-b border-slate-700">
                <div>
                    <h2 class="text-2xl font-bold text-white">Add Staff Member</h2>
                    <p class="text-slate-400 text-sm mt-1">Enter staff member information</p>
                </div>
                <button @onclick="() => showAddStaffModal = false" class="text-slate-400 hover:text-white transition">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <div class="p-6 space-y-5">
                <div>
                    <label class="block text-sm font-medium text-slate-300 mb-2">Full Name</label>
                    <input @bind="newStaff.Name" placeholder="e.g. John Doe"
                           class="w-full px-4 py-3 bg-slate-700/70 border border-slate-600 rounded-xl text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-300 mb-2">Email</label>
                    <input @bind="newStaff.Email" type="email" placeholder="john@pharmacy.com"
                           class="w-full px-4 py-3 bg-slate-700/70 border border-slate-600 rounded-xl text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-300 mb-2">Role</label>
                    <select @bind="newStaff.Role"
                            class="w-full px-4 py-3 bg-slate-700/70 border border-slate-600 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="">Select role</option>
                        <option>Pharmacist</option>
                        <option>Pharmacy Technician</option>
                        <option>Sales Associate</option>
                        <option>Manager</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-300 mb-2">Phone</label>
                    <input @bind="newStaff.Phone" placeholder="+1-555-0000"
                           class="w-full px-4 py-3 bg-slate-700/70 border border-slate-600 rounded-xl text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                </div>
            </div>

            <div class="flex justify-end space-x-3 px-6 pb-6">
                <button @onclick="() => showAddStaffModal = false"
                        class="px-6 py-3 bg-slate-700 hover:bg-slate-600 text-white rounded-xl font-medium transition">
                    Cancel
                </button>
                <button @onclick="SaveStaff"
                        class="px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-xl font-medium shadow-lg shadow-blue-600/30">
                    Add Staff
                </button>
            </div>
        </div>
    </div>
}

@if (showAddShiftModal)
{
    <div class="fixed inset-0 bg-black/80 flex items-center justify-center z-50 p-4">
        <div class="bg-slate-800/90 backdrop-blur-xl rounded-2xl border border-slate-700 shadow-2xl w-full max-w-md">
            <div class="flex items-center justify-between p-6 border-b border-slate-700">
                <div>
                    <h2 class="text-2xl font-bold text-white">Schedule Shift</h2>
                    <p class="text-slate-400 text-sm mt-1">Create a new staff shift</p>
                </div>
                <button @onclick="() => showAddShiftModal = false" class="text-slate-400 hover:text-white transition">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <div class="p-6 space-y-5">
                <div>
                    <label class="block text-sm font-medium text-slate-300 mb-2">Staff Member</label>
                    <select @bind="newShift.StaffId"
                            class="w-full px-4 py-3 bg-slate-700/70 border border-slate-600 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="0">Select staff member</option>
                        @foreach (var s in staffMembers)
                        {
                            <option value="@s.StaffId">@s.Name - @s.Role</option>
                        }
                    </select>
                </div>

                <div>
                    <label class="block text-sm font-medium text-slate-300 mb-2">Date</label>
                    <input value="@newShift.DateString" @onchange="@((ChangeEventArgs e) => newShift.DateString = e.Value?.ToString() ?? "")"
                           type="date"
                           class="w-full px-4 py-3 bg-slate-700/70 border border-slate-600 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-blue-500" />
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-slate-300 mb-2">Start Time</label>
                        <input value="@newShift.StartTimeString" @onchange="@((ChangeEventArgs e) => newShift.StartTimeString = e.Value?.ToString() ?? "")"
                               type="time" placeholder="09:00"
                               class="w-full px-4 py-3 bg-slate-700/70 border border-slate-600 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-300 mb-2">End Time</label>
                        <input value="@newShift.EndTimeString" @onchange="@((ChangeEventArgs e) => newShift.EndTimeString = e.Value?.ToString() ?? "")"
                               type="time" placeholder="17:00"
                               class="w-full px-4 py-3 bg-slate-700/70 border border-slate-600 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    </div>
                </div>
            </div>

            <div class="flex justify-end space-x-3 px-6 pb-6">
                <button @onclick="() => showAddShiftModal = false"
                        class="px-6 py-3 bg-slate-700 hover:bg-slate-600 text-white rounded-xl font-medium transition">
                    Cancel
                </button>
                <button @onclick="SaveShift"
                        class="px-8 py-3 bg-emerald-600 hover:bg-emerald-700 text-white rounded-xl font-medium shadow-lg shadow-emerald-600/30">
                    Schedule Shift
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Inject]
    public IStaffService StaffService { get; set; } = default!;
    [Inject]
    public IJSRuntime JS { get; set; } = default!;

    private bool isLoading = true;
    private bool showAddStaffModal = false;
    private bool showAddShiftModal = false;

    private List<PharmacyManagementSystem.Services.Staff> staffMembers = new();
    private List<PharmacyManagementSystem.Services.Shift> shifts = new();

    private PharmacyManagementSystem.Services.Staff newStaff = new();
    private PharmacyManagementSystem.Services.Shift newShift = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            staffMembers = await StaffService.GetAllStaffAsync();
            shifts = await StaffService.GetAllShiftsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading staff data: {ex.Message}");
            await JS.InvokeVoidAsync("alert", $"Error loading staff data: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void OpenAddStaffModal()
    {
        newStaff = new PharmacyManagementSystem.Services.Staff();
        showAddStaffModal = true;
    }

    private async Task SaveStaff()
    {
        if (string.IsNullOrWhiteSpace(newStaff.Name) || string.IsNullOrWhiteSpace(newStaff.Role))
        {
            await JS.InvokeVoidAsync("alert", "Please enter a name and select a role.");
            return;
        }

        try
        {
            await StaffService.AddStaffAsync(newStaff);
            await JS.InvokeVoidAsync("alert", $"Staff '{newStaff.Name}' added successfully!");
            showAddStaffModal = false;
            await LoadData();
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error saving staff: {ex.Message}");
        }
    }

    private void OpenAddShiftModal()
    {
        // Initialize newShift with default values and string properties for binding
        newShift = new PharmacyManagementSystem.Services.Shift
        {
            Date = DateTime.Today,
            DateString = DateTime.Today.ToString("yyyy-MM-dd"),
            StartTimeString = "09:00",
            EndTimeString = "17:00"
        };
        showAddShiftModal = true;
    }

    private async Task SaveShift()
    {
        // 1. Convert string inputs from HTML to TimeSpan and DateTime

        // Parse Date String
        if (!DateTime.TryParse(newShift.DateString, out var shiftDate))
        {
            await JS.InvokeVoidAsync("alert", "Invalid date format.");
            return;
        }

        // Parse Time Strings
        if (!TimeSpan.TryParse(newShift.StartTimeString, out var startTime) ||
            !TimeSpan.TryParse(newShift.EndTimeString, out var endTime))
        {
            await JS.InvokeVoidAsync("alert", "Invalid time format (use HH:MM).");
            return;
        }

        // Apply parsed values to the final model fields
        newShift.Date = shiftDate.Date;
        newShift.StartTime = startTime;
        newShift.EndTime = endTime;

        // 2. Validation check
        if (newShift.StaffId == 0)
        {
            await JS.InvokeVoidAsync("alert", "Please select a staff member.");
            return;
        }

        try
        {
            await StaffService.AddShiftAsync(newShift);
            await JS.InvokeVoidAsync("alert", "Shift scheduled successfully!");
            showAddShiftModal = false;
            await LoadData();
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error scheduling shift: {ex.Message}");
        }
    }
}