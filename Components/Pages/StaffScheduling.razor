@page "/staff"
@layout DashboardLayout
@inject HttpClient Http

<PageTitle>Staff Scheduling</PageTitle>

<div class="space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-white">Staff Scheduling</h1>
            <p class="mt-1 text-sm text-slate-400">Manage staff members and their schedules</p>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-3 gap-6">
        <!-- Total Staff -->
        <div class="bg-slate-800/50 backdrop-blur-sm rounded-xl border border-slate-700/50 p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-slate-400 mb-1">Total Staff</p>
                    <h3 class="text-3xl font-bold text-white">@staffMembers.Count</h3>
                    <p class="text-xs text-slate-500 mt-1">Active members</p>
                </div>
                <div class="w-12 h-12 bg-blue-500/20 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                </div>
            </div>
        </div>

        <!-- Today's Shifts -->
        <div class="bg-slate-800/50 backdrop-blur-sm rounded-xl border border-slate-700/50 p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-slate-400 mb-1">Today's Shifts</p>
                    <h3 class="text-3xl font-bold text-white">@GetTodayShiftsCount()</h3>
                    <p class="text-xs text-slate-500 mt-1">Scheduled shifts</p>
                </div>
                <div class="w-12 h-12 bg-emerald-500/20 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
            </div>
        </div>

        <!-- This Week -->
        <div class="bg-slate-800/50 backdrop-blur-sm rounded-xl border border-slate-700/50 p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-slate-400 mb-1">This Week</p>
                    <h3 class="text-3xl font-bold text-white">@GetWeekShiftsCount()</h3>
                    <p class="text-xs text-slate-500 mt-1">Total shifts</p>
                </div>
                <div class="w-12 h-12 bg-amber-500/20 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-2 gap-6">
        <!-- Left Side - Staff Members -->
        <div class="bg-slate-800/50 backdrop-blur-sm rounded-xl border border-slate-700/50 overflow-hidden">
            <!-- Header -->
            <div class="p-6 border-b border-slate-700/50 flex items-center justify-between">
                <h2 class="text-lg font-semibold text-white">Staff Members</h2>
                <button class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-all duration-200 flex items-center space-x-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                    </svg>
                    <span>Add Staff</span>
                </button>
            </div>

            <!-- Staff Table -->
            <div class="overflow-auto max-h-[600px]">
                <table class="min-w-full">
                    <thead class="bg-slate-900/50 sticky top-0">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-400 uppercase tracking-wider">Name</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-400 uppercase tracking-wider">Role</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-400 uppercase tracking-wider">Status</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-700/50">
                        @foreach (var staff in staffMembers)
                        {
                            <tr class="hover:bg-slate-700/30 transition-colors">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center space-x-3">
                                        <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-bold">
                                            @GetInitials(staff.Name)
                                        </div>
                                        <div>
                                            <div class="text-sm font-medium text-white">@staff.Name</div>
                                            <div class="text-xs text-slate-500">@staff.Email</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="text-sm text-slate-300">@staff.Role</span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="px-3 py-1 text-xs font-medium rounded-full @GetStatusClass(staff.Status)">
                                        @staff.Status
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Right Side - Weekly Schedule -->
        <div class="bg-slate-800/50 backdrop-blur-sm rounded-xl border border-slate-700/50 overflow-hidden">
            <!-- Header -->
            <div class="p-6 border-b border-slate-700/50 flex items-center justify-between">
                <h2 class="text-lg font-semibold text-white">Weekly Schedule</h2>
                <button class="px-4 py-2 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg font-medium transition-all duration-200 flex items-center space-x-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                    </svg>
                    <span>Add Shift</span>
                </button>
            </div>

            <!-- Weekly Calendar -->
            <div class="p-6 space-y-4 overflow-auto max-h-[600px]">
                @foreach (var day in weekDays)
                {
                    <div class="bg-slate-900/30 border border-slate-700/50 rounded-lg p-4">
                        <div class="flex items-center justify-between mb-3">
                            <div>
                                <h3 class="text-sm font-semibold text-white">@day.Name</h3>
                                <p class="text-xs text-slate-500">@day.Date</p>
                            </div>
                            <div class="text-right">
                                <p class="text-xs text-slate-400">@GetDayShiftsCount(day) shifts</p>
                            </div>
                        </div>

                        @if (GetDayShifts(day).Count == 0)
                        {
                            <div class="text-center py-4 text-slate-500 text-sm">
                                No shifts scheduled
                            </div>
                        }
                        else
                        {
                            <div class="space-y-2">
                                @foreach (var shift in GetDayShifts(day))
                                {
                                    <div class="flex items-center justify-between p-3 bg-slate-800/50 rounded-lg border border-slate-700/50">
                                        <div class="flex items-center space-x-3">
                                            <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white text-xs font-bold">
                                                @GetInitials(shift.StaffName)
                                            </div>
                                            <div>
                                                <p class="text-sm font-medium text-white">@shift.StaffName</p>
                                                <p class="text-xs text-slate-500">@shift.Role</p>
                                            </div>
                                        </div>
                                        <div class="text-right">
                                            <p class="text-sm font-medium text-blue-400">@shift.StartTime - @shift.EndTime</p>
                                            <p class="text-xs text-slate-500">@shift.Duration hours</p>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    // Staff Member Model
    public class StaffMember
    {
        public int Id { get; set; }
        public string Name { get; set; } = "";
        public string Email { get; set; } = "";
        public string Role { get; set; } = "";
        public string Status { get; set; } = "active";
    }

    // Shift Model
    public class Shift
    {
        public int Id { get; set; }
        public int StaffId { get; set; }
        public string StaffName { get; set; } = "";
        public string Role { get; set; } = "";
        public string Day { get; set; } = "";
        public string StartTime { get; set; } = "";
        public string EndTime { get; set; } = "";
        public int Duration { get; set; }
    }

    // Week Day Model
    public class WeekDay
    {
        public string Name { get; set; } = "";
        public string Date { get; set; } = "";
        public string ShortName { get; set; } = "";
    }

    // Sample data
    private List<StaffMember> staffMembers = new()
    {
        new StaffMember { Id = 1, Name = "John Doe", Email = "john@pharmacy.com", Role = "Pharmacist", Status = "active" },
        new StaffMember { Id = 2, Name = "Jane Smith", Email = "jane@pharmacy.com", Role = "Pharmacy Technician", Status = "active" },
        new StaffMember { Id = 3, Name = "Mike Johnson", Email = "mike@pharmacy.com", Role = "Sales Associate", Status = "active" },
        new StaffMember { Id = 4, Name = "Sarah Williams", Email = "sarah@pharmacy.com", Role = "Pharmacist", Status = "active" },
    };

    private List<Shift> shifts = new()
    {
        new Shift { Id = 1, StaffId = 1, StaffName = "John Doe", Role = "Pharmacist", Day = "Thu", StartTime = "09:00", EndTime = "17:00", Duration = 8 },
        new Shift { Id = 2, StaffId = 2, StaffName = "Jane Smith", Role = "Technician", Day = "Thu", StartTime = "10:00", EndTime = "18:00", Duration = 8 },
        new Shift { Id = 3, StaffId = 1, StaffName = "John Doe", Role = "Pharmacist", Day = "Fri", StartTime = "09:00", EndTime = "17:00", Duration = 8 },
        new Shift { Id = 4, StaffId = 3, StaffName = "Mike Johnson", Role = "Sales Associate", Day = "Fri", StartTime = "12:00", EndTime = "20:00", Duration = 8 },
        new Shift { Id = 5, StaffId = 4, StaffName = "Sarah Williams", Role = "Pharmacist", Day = "Sat", StartTime = "08:00", EndTime = "16:00", Duration = 8 },
        new Shift { Id = 6, StaffId = 2, StaffName = "Jane Smith", Role = "Technician", Day = "Sat", StartTime = "10:00", EndTime = "18:00", Duration = 8 },
    };

    private List<WeekDay> weekDays = new()
    {
        new WeekDay { Name = "Thu", Date = "Dec 5", ShortName = "Thu" },
        new WeekDay { Name = "Fri", Date = "Dec 6", ShortName = "Fri" },
        new WeekDay { Name = "Sat", Date = "Dec 7", ShortName = "Sat" },
        new WeekDay { Name = "Sun", Date = "Dec 8", ShortName = "Sun" },
        new WeekDay { Name = "Mon", Date = "Dec 9", ShortName = "Mon" },
        new WeekDay { Name = "Tue", Date = "Dec 10", ShortName = "Tue" },
        new WeekDay { Name = "Wed", Date = "Dec 11", ShortName = "Wed" },
    };

    private string GetInitials(string name)
    {
        var parts = name.Split(' ');
        if (parts.Length >= 2)
        {
            return $"{parts[0][0]}{parts[1][0]}".ToUpper();
        }
        return name.Length >= 2 ? name.Substring(0, 2).ToUpper() : name.ToUpper();
    }

    private string GetStatusClass(string status)
    {
        return status.ToLower() switch
        {
            "active" => "bg-emerald-500/20 text-emerald-300 border border-emerald-500/30",
            "inactive" => "bg-slate-500/20 text-slate-300 border border-slate-500/30",
            "on leave" => "bg-amber-500/20 text-amber-300 border border-amber-500/30",
            _ => "bg-slate-500/20 text-slate-300 border border-slate-500/30"
        };
    }

    private int GetTodayShiftsCount()
    {
        // Assuming today is Thursday (first day in the week)
        return GetDayShifts(weekDays[0]).Count;
    }

    private int GetWeekShiftsCount()
    {
        return shifts.Count;
    }

    private int GetDayShiftsCount(WeekDay day)
    {
        return shifts.Count(s => s.Day == day.ShortName);
    }

    private List<Shift> GetDayShifts(WeekDay day)
    {
        return shifts.Where(s => s.Day == day.ShortName).ToList();
    }
}