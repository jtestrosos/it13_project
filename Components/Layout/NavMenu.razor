<div class="h-full flex flex-col h-screen pt-5">
    <div class="px-6 mb-10">
        <h2 class="text-2xl font-bold text-emerald-400">PharmERP</h2>
    </div>

    <nav class="flex-1 px-4">
        <div class="space-y-1">
            <NavLink class="flex items-center px-4 py-3 text-sm font-medium rounded-lg hover:bg-slate-800 transition"
                     href="" Match="NavLinkMatch.All">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
                Dashboard
            </NavLink>

            <NavLink class="flex items-center px-4 py-3 text-sm font-medium rounded-lg hover:bg-slate-800 transition"
                     href="medicineinventory">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2" />
                </svg>
                Inventory
            </NavLink>

            <NavLink class="flex items-center px-4 py-3 text-sm font-medium rounded-lg hover:bg-slate-800 transition"
                     href="sales">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Sales
            </NavLink>
        </div>
    </nav>

    <div class="p-4 border-t border-slate-700">
        <button @onclick="Logout" class="w-full flex items-center px-4 py-3 text-sm font-medium text-red-400 hover:bg-slate-800 rounded-lg transition">
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
            </svg>
            Logout
        </button>
    </div>
</div>

@code {
    [Inject] NavigationManager Navigation { get; set; } = default!;

    private void Logout()
    {
        Navigation.NavigateTo("/login", forceLoad: true);
    }
}