@inherits LayoutComponentBase

<div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 text-white">
    <!-- Sidebar -->
    <div class="fixed inset-y-0 left-0 w-64 bg-slate-900/95 backdrop-blur border-r border-slate-700 z-10">
        <NavMenu />
    </div>

    <!-- Main content area -->
    <div class="ml-64 min-h-screen">
        <!-- Top bar (optional - you can remove if you don't want it) -->
        <div class="bg-slate-900/80 backdrop-blur border-b border-slate-700 px-8 py- py-4 flex justify-between items-center">
            <h1 class="text-2xl font-bold">Medicine ERP</h1>
            <div class="text-sm text-slate-400">
                Welcome, <span class="text-emerald-400">Admin</span>
            </div>
        </div>

        <!-- Page content -->
        <div class="p-8">
            @Body
        </div>
    </div>
</div>