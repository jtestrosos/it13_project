            }

            <NavLink href="/sales" class="flex items-center px-6 py-3 text-slate-300 hover:bg-slate-700 hover:text-emerald-400 transition-colors border-l-4 border-transparent hover:border-emerald-500" ActiveClass="bg-slate-700 text-emerald-400 border-emerald-500">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
                Sales & Billing
            </NavLink>

            @if (userRole != "Staff")
            {
            <NavLink href="/staff" class="flex items-center px-6 py-3 text-slate-300 hover:bg-slate-700 hover:text-emerald-400 transition-colors border-l-4 border-transparent hover:border-emerald-500" ActiveClass="bg-slate-700 text-emerald-400 border-emerald-500">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                Staff Scheduling
            </NavLink>
            }

            @if (userRole != "Staff")
            {
            <NavLink href="/reports" class="flex items-center px-6 py-3 text-slate-300 hover:bg-slate-700 hover:text-emerald-400 transition-colors border-l-4 border-transparent hover:border-emerald-500" ActiveClass="bg-slate-700 text-emerald-400 border-emerald-500">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
                Reports & Analytics
            </NavLink>
            }

            @if (userRole == "SuperAdmin")
            {
            <NavLink href="/roles" class="flex items-center px-6 py-3 text-slate-300 hover:bg-slate-700 hover:text-emerald-400 transition-colors border-l-4 border-transparent hover:border-emerald-500" ActiveClass="bg-slate-700 text-emerald-400 border-emerald-500">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
                Role Management
            </NavLink>
            }

            <div class="my-4 px-6">
                <div class="border-t border-slate-700"></div>
            </div>
        </nav>

        <!-- User Profile - Fixed at bottom -->
        <div class="border-t border-slate-700 p-4 flex-shrink-0">
            <div class="flex items-center space-x-3">
                <div class="w-10 h-10 bg-emerald-500 rounded-full flex items-center justify-center text-white font-semibold">
                    @userInitials
                </div>
                <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-slate-300 truncate">@userName</p>
                    <p class="text-xs text-slate-400 truncate">@userEmail</p>
                </div>
                <button @onclick="HandleLogout" class="p-1.5 text-slate-400 hover:text-slate-300">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                    </svg>
                </button>
            </div>
        </div>
    </aside>

    <!-- Main Content Area -->
    <div class="flex-1 flex flex-col h-full overflow-hidden">
        <!-- Top Navigation Bar -->
        <header class="bg-slate-800 shadow-sm border-b border-slate-700 flex-shrink-0">
            <div class="flex items-center justify-between px-6 py-4">
                <div class="flex items-center flex-1">
                    <!-- Search Bar -->
                    <div class="relative mx-4 flex-1 max-w-md">
                        <span class="absolute inset-y-0 left-0 pl-3 flex items-center">
                            <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                            </svg>
                        </span>
                        <input class="w-full pl-10 pr-4 py-2 border border-slate-600 rounded-lg bg-slate-700 text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent"
                               type="search"
                               placeholder="Search medicines, suppliers, orders...">
                    </div>
                </div>

                <!-- Right Side Icons -->
                <div class="flex items-center space-x-4">
                    <div class="relative">
                        <button @onclick="ToggleNotifications" class="relative p-2 text-slate-400 hover:text-slate-300 focus:outline-none">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                            </svg>
                            @if (showBadge && notificationCount > 0)
                            {
                                <span class="absolute top-1 right-1 flex h-5 w-5 items-center justify-center rounded-full bg-red-500 text-xs text-white font-bold">@notificationCount</span>
                            }
                        </button>

                        <!-- Notification Dropdown -->
                        @if (showNotifications)
                        {
                            <div class="absolute right-0 mt-2 w-80 bg-slate-800 rounded-xl shadow-2xl border border-slate-700 z-50 max-h-96 overflow-hidden flex flex-col">
                                <div class="px-4 py-3 border-b border-slate-700 flex items-center justify-between">
                                    <h3 class="text-sm font-semibold text-white">Notifications</h3>
                                    <span class="text-xs text-slate-400">@notificationCount alerts</span>
                                </div>
                                
                                <div class="overflow-y-auto flex-1">
                                    @if (notifications.Any())
                                    {
                                        @foreach (var notification in notifications)
                                        {
                                            <div class="px-4 py-3 border-b border-slate-700/50 hover:bg-slate-700/30 transition-colors">
                                                <div class="flex items-start space-x-3">
                                                    <div class="flex-shrink-0">
                                                        @if (notification.Type == "LowStock")
                                                        {
                                                            <div class="w-8 h-8 bg-yellow-500/20 rounded-full flex items-center justify-center">
                                                                <svg class="w-4 h-4 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                                                </svg>
                                                            </div>
                                                        }
                                                        else
                                                        {
                                                            <div class="w-8 h-8 bg-red-500/20 rounded-full flex items-center justify-center">
                                                                <svg class="w-4 h-4 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                                                </svg>
                                                            </div>
                                                        }
                                                    </div>
                                                    <div class="flex-1 min-w-0">
                                                        <p class="text-sm font-medium text-white">@notification.Title</p>
                                                        <p class="text-xs text-slate-400 mt-1">@notification.Message</p>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div class="px-4 py-8 text-center text-slate-400">
                                            <svg class="w-12 h-12 mx-auto mb-2 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                            </svg>
                                            <p class="text-sm">No notifications</p>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </header>

        <!-- Page Content - Scrollable -->
        <main class="flex-1 overflow-y-auto bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900">
            @Body
        </main>
    </div>
</div>

@code {
    @inject IJSRuntime JS
    @inject NavigationManager Navigation
    @inject IInventoryService InventoryService

    private string userRole = "Staff";
    private string userName = "User";
    private string userEmail = "";
    private string userInitials = "U";
    private bool showNotifications = false;
    private bool showBadge = false;
    private int notificationCount = 0;
    private List<NotificationItem> notifications = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            userRole = await JS.InvokeAsync<string>("localStorage.getItem", "userRole") ?? "Staff";
            userEmail = await JS.InvokeAsync<string>("localStorage.getItem", "userEmail") ?? "";
            
            // Extract name from email or use default
            if (!string.IsNullOrEmpty(userEmail))
            {
                userName = userEmail.Split('@')[0];
                userInitials = userName.Length >= 2 ? userName.Substring(0, 2).ToUpper() : "U";
            }

            // Load notifications
            await LoadNotifications();
        }
        catch
        {
            userRole = "Staff";
        }
    }

    private async Task LoadNotifications()
    {
        try
        {
            notifications.Clear();

            // Get low stock items
            var lowStockItems = await InventoryService.GetLowStockItemsAsync();
            foreach (var item in lowStockItems.Take(5))
            {
                notifications.Add(new NotificationItem
                {
                    Type = "LowStock",
                    Title = "Low Stock Alert",
                    Message = $"{item.Name} - Only {item.Quantity} left (needs {Math.Abs(item.StockDifference)} more)"
                });
            }

            // Get inventory stats for expiring items
            var stats = await InventoryService.GetInventoryStatsAsync();
            if (stats.ExpiredCount > 0)
            {
                notifications.Add(new NotificationItem
                {
                    Type = "Expiring",
                    Title = "Expiring Medicines",
                    Message = $"{stats.ExpiredCount} medicine(s) expiring within 30 days"
                });
            }

            notificationCount = notifications.Count;
            showBadge = notificationCount > 0;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading notifications: {ex.Message}");
            notificationCount = 0;
        }
    }

    private void ToggleNotifications()
    {
        showNotifications = !showNotifications;
        if (showNotifications)
        {
            showBadge = false;
        }
    }

    private async Task HandleLogout()
    {
        await JS.InvokeVoidAsync("localStorage.removeItem", "isLoggedIn");
        await JS.InvokeVoidAsync("localStorage.removeItem", "userRole");
        await JS.InvokeVoidAsync("localStorage.removeItem", "userEmail");
        Navigation.NavigateTo("/login", forceLoad: true);
    }

    public class NotificationItem
    {
        public string Type { get; set; } = "";
        public string Title { get; set; } = "";
        public string Message { get; set; } = "";
    }
}